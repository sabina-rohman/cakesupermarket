<% include ../partials/header %>

<div class="row justify-content-center">
	<div class="col-md-12 text-center">
		<h1 style="text-align:center">
			Edit <%= baker.name %>
		</h1>
	</div>	
		<div class="col-xs-12 col-md-6 col-lg-4">
			<form action="/bakers/<%= baker._id %>?_method=PUT" method="POST">
				<div class="input-group mb-3">
				  <div class="input-group-prepend">
					<span class="input-group-text"  id="inputGroup-sizing-default">Name</span>
				  </div>
				  <input type="text" name="baker[name]" class="form-control" value="<%= baker.name %>" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
				</div>
				
				<div class="input-group mb-3">
				  <div class="input-group-prepend">
					<span class="input-group-text"  id="inputGroup-sizing-default">Cost</span>
				  </div>
				  <input type="number" name="baker[price]" class="form-control" value="<%= baker.price %>" min="0" step="0.01"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-						default" required>
				</div>
				
				<div class="input-group mb-3">
				  <div class="input-group-prepend">
					<span class="input-group-text" id="inputGroup-sizing-default">Image</span>
				  </div>
				  <input type="text" name="baker[image]" class="form-control" value="<%= baker.image %>" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
				</div>
				
				<div class="input-group mb-3">
				  <div class="input-group-prepend">
					<span class="input-group-text" id="inputGroup-sizing-default">Description</span>
				  </div>
				  <input type="text" name="baker[description]" class="form-control"  value="<%= baker.description %>" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit">
						Submit!
					</button>
				</div>
			</form>
			<a href="/bakers">Go back</a>
		</div>
		
	
		
</div>

<% include ../partials/footer %>